@model Assignment.Models.DomainClass.Product

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Product</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>	

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Brand)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Brand.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Status)
		</dt>
		<dd class="col-sm-10">
			@((Model.Status == 1) ? "Đang bán" : "Ngừng bán")
		</dd>
	</dl>
	<div class="row">
		<div class="col-sm-3 ">
			<span>
				@Html.DisplayNameFor(model => model.ImageMainUrl) <br />
			</span>
			<span>
				<img style="height: 150px" src="@Model.ImageMainUrl" />
			</span>
		</div>
		<div class="col-sm-3 ">
			<span>
				Ảnh sản phẩm 1<br />
			</span>
			<span>
				<img style="height: 150px" src="@Model.ProductImgs.ToList()[0].Url1" />
			</span>
		</div>
		<div class="col-sm-3 ">
			<span>
				Ảnh sản phẩm 2<br />
			</span>
			<span>
				<img style="height: 150px" src="@Model.ProductImgs.ToList()[0].Url2" />
			</span>
		</div>
		<div class="col-sm-3 ">
			<span>
				Ảnh sản phẩm 3<br />
			</span>
			<span>
				<img style="height: 150px" src="@Model.ProductImgs.ToList()[0].Url3" />
			</span>
		</div>
	</div>
	<br>

</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
